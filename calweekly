NOW="$(date +%F)"
WEEKS=5

[[ -z "$1" ]] || WEEKS="$1"
[[ -z "$2" ]] || NOW="$2"
[[ -z "$3" ]] || TXT="$3"

for i in $(seq 0 "$WEEKS")
do
  D="$((i*7))"
  ISO="$(date -d "$NOW + $D days" +'%F')"
  MONTH="$(LC_ALL=en_US.UTF-8 date -d "$NOW + $D days" +'%b')"
  DAY="$(date -d "$NOW + $D days" +'%d')"
  printf "%s %s%s\\n" "$ISO" "${MONTH^} $DAY" "$TXT"
done
